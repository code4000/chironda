<% if @home != nil %>
<section id="contact" class="section parallax section-white" style="background-image: url('<%= @home.contact.url %>');">
	<% else %>
	<section id="contact" class="section parallax section-white noimg" >
	<% end %>
	<div class="overlayc"></div>
	<div class="container">
		<div class="row">

			<!--Start heading-->
			<div class="col-md-12  wow zoomIn" data-wow-duration="700ms" data-wow-delay="300ms">
				<div class="section-header" style="margin-bottom: 50px">
					<h2 class="smt">contact</h2>
				</div>
			</div>
			<!--End heading-->

			<!--Start contact form-->
			<div class="col-md-7 contact-form wow zoomIn" data-wow-duration="700ms" data-wow-delay="300ms">
				<div class="contact-form" >

					<form>
						<div class="row">
							<div class="col-md-6">
								<input class="form-control" name="name" id="name" placeholder="Full Name" type="text">
							</div>
							<div class="col-md-6">
								<input class="form-control" name="email" placeholder="Your Email" type="email">
							</div>
							<div class="col-md-12">
								<input class="form-control" name="subject" placeholder="Subject" type="text">
							</div>
							<div class="col-md-12">
								<textarea class="form-control" name="message" rows="5" placeholder="Your Message"></textarea>
							</div>
							<div class="col-md-12">
								<button type="submit"  name="submit" class="btn btn-default btn-lg">SEND MESSAGE</button>
							</div>
						</div>
					</form>
				</div> <!--/.contact-form-->
			</div>
			<!--contact form-->

			<!--Start contact information -->
			<% if @home != nil %>
			<div class="col-md-4 contact-address wow zoomIn" data-wow-duration="700ms" data-wow-delay="400ms">
				<p style="margin-bottom: 0;"> <i class="fa fa-map-marker"></i>  <span><%= @home.contactlocation %></span></p>
				<p style="margin-bottom: 0;"> <span><%= @home.city %></span></p>
				<p> <span><%= @home.locnumber %></span></p>
				<p style="margin-bottom: 0;"> <i class="fa fa-map-marker"></i>  <span><%= @home.contactlocation1 %></span></p>
				<p style="margin-bottom: 0;">   <span><%= @home.city1 %></span></p>
				<p>   <span><%= @home.locnumber1 %></span></p>
				<p style="margin-bottom: 0;"> <i class="fa fa-map-marker"></i>  <span><%= @home.contactlocation2 %></span></p>
				<p style="margin-bottom: 0;">   <span><%= @home.city2 %></span></p>
				<p>   <span><%= @home.locnumber2 %></span></p>
				<p> <i class="fa fa-envelope"></i> <span><%= @home.email %></span></p>
				<p> <i class="fa fa-phone"></i> <span><%= @home.number %></span></p>
				<p> <i class="fa fa-clock-o"></i> <span><%= @home.time %></span></p>
				<p> <i class="fa fa-clock-o"></i> <span><%= @home.time1 %></span></p>
			</div>
			<% else %>
			<div class="col-md-4 contact-address wow zoomIn" data-wow-duration="700ms" data-wow-delay="400ms">
				<p style="margin-bottom: 0;"> <i class="fa fa-map-marker"></i>  <span>Location</span></p>
				<p style="margin-bottom: 0;"> <span>City</span></p>
				<p> <span>123123123</span></p>
				<p style="margin-bottom: 0;"> <i class="fa fa-map-marker"></i>  <span>Location</span></p>
				<p style="margin-bottom: 0;">   <span>City</span></p>
				<p>   <span>123123123</span></p>
				<p style="margin-bottom: 0;"> <i class="fa fa-map-marker"></i>  <span>Location</span></p>
				<p style="margin-bottom: 0;">   <span>City</span></p>
				<p>   <span>123123123</span></p>
				<p> <i class="fa fa-envelope"></i> <span>Email</span></p>
				<p> <i class="fa fa-phone"></i> <span>123123</span></p>
				<p> <i class="fa fa-clock-o"></i> <span>09h00</span></p>
				<p> <i class="fa fa-clock-o"></i> <span>17h00</span></p>
			</div>
			<% end %>
			<!--End contact information -->
		</div> <!--/.row-->
	</div> <!--/.container-->
</section>
