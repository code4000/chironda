<% if @home != nil %>
<section id="pricing" class="section parallax" id="pricing" style="background-image: url('<%= url_for(@home.pricing) %>');">
	<% else %>
	<section id="pricing" class="section parallax noimg" id="pricing" >
		<% end %>
	<div class="container">
		<div class="row">

			<!--Start heading-->
			<div class="col-md-12 wow fadeInUp"  data-wow-duration="700ms" data-wow-delay="300ms">
				<div class="section-header">
					<h2 style="color: black">pricing</h2>
					<hr style="border-top: 1px solid rgba(224, 178, 152, 0.7) ">
				</div>
			</div>
			<!--End heading-->

