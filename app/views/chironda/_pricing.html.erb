					<h1>Permanent make-up</h1>
					<div class="feature-list">
						<table class="zubi">
							<tbody>
								<% @treatment.each do |treatment| %>
								<% if treatment.category === "Permanent-make-up" %>
								<tr>
									<td class="left"><%= treatment.speciality %></td>
									<td class="right">£<%= treatment.price %></td>
								</tr>
								<% end -%>
								<% end %>
							</tbody>
						</table>
					</div>
					<div class="price-signup scroll">
						<a href="#contact" class="btn btn-primary btn-lg">Book Now</a>
					</div>
				</div>
			</div>
