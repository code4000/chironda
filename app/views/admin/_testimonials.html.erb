<div class="row">
	<div class="col-md-offset-1 col-md-10">
		<!--Start heading-->
		<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="row">
						<div class="col-md-offset-2 col-md-8">
							<div class="section-header">
								<h2 class="smt"><a data-toggle="collapse" href="#collapse2" id="title">Testimonials</a></h2> <br>
								<div><%= link_to "Add New testimonial", new_testimonial_path %></div>

								<hr style="border-top: 1px solid rgba(224, 178, 152, 0.7)">

							</div>
						</div>
					</div>
				</div>
				<div id="collapse2" class="panel-collapse collapse">
					<% if @home != nil %>
					<div class="container-fluid parallax" id="testimonials" style="background-image: url('<%= @home.testimonial.variant %>';">
						<% else %>
						<div class="container-fluid parallax" id="testimonials" >
							<% end %>
						<div class="row">
							<div class="col-md-8 col-md-offset-2">
								<div class="testimonials-carousel">
									<!--Start Testimonial item #1-->
									<% @testimonial.each do |testimonial| %>
									<div class="items">
										<div class="clearfix">
											<div class="name"><%= testimonial.name %></div>
											<div class="desc"><%= testimonial.content %></div>
										</div>
										<div>
											<%= link_to 'Edit', edit_testimonial_path(testimonial),class: 'white', style: 'padding-top:15px;margin-right: 15px;' %>
											<%= link_to 'Delete', testimonial_path(testimonial),class: 'white',method: :delete, data: { confirm: "Are you sure?"} %></div>
										</div>
										<% end %>
									</div>
								</div>
							</div> <!--/.row-->
						</div> <!--/.container-->
					</div>
				</div>
			</div>
			<!--End heading-->
		</div>
	</div>
