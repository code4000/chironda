<div class="row">
	<div class="col-md-offset-1 col-md-10">
		<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="row">
						<div class="col-md-offset-2 col-md-8">
							<div class="section-header">
								<h2 class="smt"><a data-toggle="collapse" href="#collapse1" id="title">Treatments</a></h2> <br>
								<div><%= link_to "Add New Treatment", new_treatment_path %></div>
								<hr style="border-top: 1px solid rgba(224, 178, 152, 0.7)">
							</div>
						</div>
					</div>
				</div>
				<div id="collapse1" class="panel-collapse collapse">
					<div class="page-section">
					<div class=" col-md-12">
						<!-- Filtering -->
						<ul class="filtering">
							<li class="filter" data-filter="Permanent-make-up">  permanent make-up</li>
							<li class="filter" data-filter="Skin"> Skin</li>
							<li class="filter" data-filter="Lashes">  lashes</li>
							<li class="filter" data-filter="Brows">  Brows</li>
						</ul>
					</div>
					<div class="full-width">
					<ul class="work-grid">
						<!-- Work Block -->
						<% @treatment.each do |treatment| %>
						<li class="mix work-item thumbnail-img <%= treatment.category %>">
							<a href="#" class="popup-image">
								<%= image_tag treatment.variant(:medium) %>
							</a>
							<div class="work-info">
								<div class="work-info-detail display-table">
									<div class="display-table-cell">
										<h4><%= treatment.speciality %></h4>
										<h4><%= link_to 'Edit', edit_treatment_path(treatment), class: 'white' %></h4>
										<h4><%= link_to 'Delete', treatment_path(treatment),class: 'white', method: :delete, data: { confirm: "Are you sure?"} %></h4>
										<h4><%= link_to 'View more', treatment, class: 'hidethis btn btn-primary btn-sm btn-color-white' %></h4>
									</div>
								</div>
							</div>
						</li>
						<% end %>
					</ul>
					 </div>
					 </div>
				</div>
			</div>
		</div>
	</div>
</div>
